<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>{% block title %}Registration{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('build/semantic_styles.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('build/login_styles.css') }}">
    {% endblock %}
</head>
<body>
<div class="pusher">
    {% block header %}{% endblock %}
    {% block body %}
        {% block page %}
            <div class="ui middle aligned center aligned grid">
                <div class="column">
                    <h2 class="ui teal image header">
                        {{ 'register.your_account'|trans }}
                    </h2>
                    <form class="ui large form" action="{{ path('skeletton_user_registration') }}" method="post">
                        <div class="ui stacked segment">
                            {{ form_start(form) }}
                            <div class="field">
                                <div class="ui left icon input">
                                    <i class="user icon"></i>
                                    {{ form_widget(form.email, {label: 'label.email'|trans}) }}
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left icon input">
                                    <i class="lock icon"></i>
                                    {{ form_widget(form.password.first, {label: 'label.password'|trans}) }}
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left icon input">
                                    <i class="lock icon"></i>
                                    {{ form_widget(form.password.second, {label: 'label.new_password_confirm'|trans}) }}
                                </div>
                            </div>
                            {% for error in errors %}
                                <div class="ui red message">{{ error.message }}
                                </div>
                            {% endfor %}
                            <br>
                            <button class="ui fluid large teal submit button">Register</button>
                            {{ form_end(form) }}
                            <div class="ui message">
                                Already registered ? <a href={{ path('skeletton_security_login') }}>Sign In</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        {% endblock %}
    {% endblock %}
    {% block footer %}{% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script src="{{ asset('build/semantic_styles.js') }}"></script>
        <script src="{{ asset('build/semantic_javascripts.js') }}"></script>
        <script src="{{ asset('build/login_javascripts.js') }}"></script>
    {% endblock %}
</div>
</body>
</html>