<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>
        {% block title %}Skeletton Application{% endblock %}
    </title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('build/semantic_styles.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}">

        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}
</head>
<body>
    {% block header %}
        <header>
            {% include 'includes/menu-left.html.twig' %}
        </header>
    {% endblock %}
    <div class="pusher body-container">
        {% include 'includes/menu.html.twig' %}
        {% block body %}

        {% endblock %}
        {% block footer %}
            <footer>
                {% include 'includes/footer.html.twig' %}
            </footer>
        {% endblock %}
    </div>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="{{ asset('build/semantic_styles.js') }}"></script>
    <script src="{{ asset('build/semantic_javascripts.js') }}"></script>
{% endblock %}

</body>
</html>
